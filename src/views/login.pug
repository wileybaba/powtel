extends layout

block content

    
    .uk-container.uk-position-center
      .uk-grid-margin.uk-grid.uk-grid-stack(uk-grid='')
        .uk-margin.uk-width-large.uk-margin-auto.uk-card.uk-card-default.uk-card-body.uk-box-shadow-large
          h3.uk-card-title.uk-text-center Welcome back!
          p.uk-alert-danger.uk-text-small= message
          form(method='POST' action='/auth/login')
            .uk-margin
              .uk-inline.uk-width-1-1
                span.uk-form-icon(uk-icon='icon: mail')
                input.uk-input.uk-form-large(type='text', placeholder='Email address', name='email')
            .uk-margin
              .uk-inline.uk-width-1-1
                span.uk-form-icon(uk-icon='icon: lock')
                input.uk-input.uk-form-large(type='password', placeholder='Password', name='password')
            .uk-margin
              button.uk-button.uk-button-primary.uk-button-large.uk-width-1-1(type='submit', style='background: linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 0)), linear-gradient(69deg, #676576, #426BF4);') Login
            .uk-text-small.uk-text-center
              | Not registered? 
              a(href='#modal-register', uk-toggle='') Create an account
  
    
